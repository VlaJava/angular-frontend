{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/api/*",
      "/assets/*",
      "/*.{css,scss,sass,js,json,ico,png,jpg,jpeg,gif,svg,woff,woff2,ttf,eot}"
    ]
  },
  "mimeTypes": {
    ".json": "application/json",
    ".css": "text/css",
    ".js": "application/javascript"
  },
  "routes": [
    {
      "route": "/index.html",
      "headers": {
        "Cache-Control": "no-cache"
      }
    },
    {
      "route": "/",
      "headers": {
        "Cache-Control": "no-cache"
      }
    },
    {
      "route": "/api/*",
      "headers": {
        "Cache-Control": "no-store"
      }
    },
    {
      "route": "/*.{json}",
      "headers": {
        "Cache-Control": "no-cache"
      }
    },
    {
      "route": "/*.{js,css,woff,woff2,ttf,eot,svg,png,jpg,jpeg,gif,ico}",
      "headers": {
        "Cache-Control": "public, max-age=604800, must-revalidate"
      }
    }
  ]
}